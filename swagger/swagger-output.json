{
  "swagger": "2.0",
  "info": {
    "title": "REST API",
    "version": "1.0.0",
    "description": "Описание REST API сервиса по управлению кэшем."
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/cache/clear": {
      "delete": {
        "tags": [
          "Cache"
        ],
        "summary": "Очистка кэша",
        "description": "Очищает имеющийся кэш.",
        "responses": {
          "200": {
            "description": "Сообщение об успешном очищении кэша",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Кэш очищен."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/cache/size": {
      "put": {
        "tags": [
          "Cache"
        ],
        "summary": "Изменение размера кэша",
        "description": "Изменяет размер кэша.",
        "parameters": [
          {
            "name": "newSize",
            "in": "body",
            "description": "Размер кэша (в количестве элементов)",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "newSize": {
                  "type": "number",
                  "example": 3
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Сообщение об успешном изменении размера кэша",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Размер кэша изменён."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/cache/update": {
      "put": {
        "tags": [
          "Cache"
        ],
        "summary": "Обновление кэша",
        "description": "Обновляет кэш.",
        "responses": {
          "200": {
            "description": "Сообщение об успешном обновлении кэша",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Кэш обновлён."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
